{
  "respectGitignore": true,
  "permissions": {
    "bash": {
      "allowed": [
        "python --version",
        "python3 --version",
        "pip --version",
        "pip install -r requirements.txt",
        "pip install -r requirements-dev.txt",
        "cd scripts && python main.py",
        "cd scripts && python main.py --dry-run",
        "cd scripts && python main.py --no-archive",
        "pytest tests/",
        "pytest tests/ --cov=scripts",
        "pytest tests/ -v",
        "pytest tests/test_design_system.py",
        "python -m pytest",
        "black scripts/ tests/",
        "black --check scripts/ tests/",
        "flake8 scripts/ tests/",
        "mypy scripts/",
        "git status",
        "git status --short",
        "git status --porcelain",
        "git diff",
        "git diff --name-only",
        "git diff --staged",
        "git log --oneline -5",
        "git branch --show-current",
        "ls -la public/",
        "ls -la scripts/",
        "cat .env.example"
      ]
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/venv-activate.sh",
            "description": "Activate Python venv if present"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "edit|write|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/generated-file-guard.sh",
            "description": "Guard generated pipeline output"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "edit|write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/format-python.sh",
            "description": "Auto-format Python files with black"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/verify-tests.sh",
            "description": "Run tests after changes"
          }
        ]
      }
    ]
  }
}
